<asp:GridView CssClass="mGrid" PagerStyle-CssClass="pgr"  AlternatingRowStyle-CssClass="alt" ID="dgMsr" runat="server" AutoGenerateColumns="false" Font-Size="9pt" ShowFooter="false"
